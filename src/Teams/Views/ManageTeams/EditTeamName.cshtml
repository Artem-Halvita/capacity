@using Teams.Models
@model Teams.Models.Team

@{
    ViewData["Title"] = "Edit Team Name";
}

<h1>EditTeamName</h1>


@using (Html.BeginForm())
{
    <input type="hidden" value="@Model.Id" />
    <table>
        <tr>
            <td>Введите новое имя команды</td>
        </tr>
        <tr>
            <td><input type="text" name="team_name" value="@Model.TeamName" /></td>
        </tr>
        <tr>
            <td><input type="submit" class="btn btn-primary" value="Сохранить" />
        </tr>
        <tr>
            <td><a class="btn btn-primary" href="GetMyTeams" role="button">Вернуться назад</a></td>
        </tr>
    </table>
}